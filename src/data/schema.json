{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://albertogaleano.com/schemas/cv.json",
  "title": "CV Data Schema",
  "description": "Schema for CV/Resume data structure",
  "type": "object",
  "required": ["personal", "sections"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "personal": {
      "type": "object",
      "description": "Personal information and contact details",
      "required": ["name", "contactData", "urls"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Full name",
          "minLength": 1
        },
        "contactData": {
          "type": "array",
          "description": "Array of contact information (email, phone, address)",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "urls": {
          "type": "array",
          "description": "Array of URL tuples [display text, actual URL]",
          "items": {
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "items": {
              "type": "string"
            }
          }
        }
      },
      "additionalProperties": false
    },
    "sections": {
      "type": "array",
      "description": "Array of CV sections (experience, education, projects, skills, etc.)",
      "items": {
        "$ref": "#/definitions/section"
      },
      "minItems": 1
    }
  },
  "additionalProperties": false,
  "definitions": {
    "section": {
      "type": "object",
      "required": ["id", "type", "title", "data"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique section identifier",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "description": "Type of content rendering for this section",
          "enum": ["bullets", "text", "joinedList"]
        },
        "title": {
          "type": "string",
          "description": "Section title/heading",
          "minLength": 1
        },
        "data": {
          "type": "array",
          "description": "Array of section items",
          "items": {
            "$ref": "#/definitions/sectionItem"
          },
          "minItems": 1
        }
      },
      "additionalProperties": false
    },
    "sectionItem": {
      "type": "object",
      "required": ["title"],
      "properties": {
        "title": {
          "type": "string",
          "description": "Item title (company name, project name, degree, etc.)"
        },
        "subtitle": {
          "type": "string",
          "description": "Item subtitle (position, institution, etc.)"
        },
        "location": {
          "type": "string",
          "description": "Location/city"
        },
        "startDate": {
          "type": "string",
          "description": "Start date (e.g., 'Jan 2023')"
        },
        "endDate": {
          "type": "string",
          "description": "End date (e.g., 'Dec 2023' or 'Present')"
        },
        "list": {
          "type": "array",
          "description": "List of bullet points or skills",
          "items": {
            "type": "string"
          }
        },
        "text": {
          "type": "string",
          "description": "Paragraph text content"
        }
      },
      "additionalProperties": false
    }
  }
}